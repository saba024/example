@model HistoryPedia.Models.Article
@{
    ViewBag.Title = "Add to favorite";
}

<div>
    <dl class="dl-horizontal">
        <dt>Title</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>About</dt>
        <dd>
            @Html.DisplayFor(model => model.Info)
        </dd>
    </dl>

    <div>
        <form asp-controller="Favorite" asp-action="AddToFavorite" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-outline-danger" value="Remove" />
            </div>
        </form>
    </div>
</div>